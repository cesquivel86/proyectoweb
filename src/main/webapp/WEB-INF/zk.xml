<?xml version="1.0" encoding="UTF-8"?>

<zk>
	<!-- [Optional]
	Uncomment if you want to defines the application's name 
	
	<preference>
		<name>org.zkoss.zk.ui.WebApp.name</name>
		<value>xpressit</value>
	</preference>
	-->

	<session-config>
		<device-type>ajax</device-type>
		<timeout-uri>/timeout.zul</timeout-uri>
		<automatic-timeout/>
		<session-timeout>3600</session-timeout>
		<!--     <timer-keep-alive>false</timer-keep-alive> -->
		<!--     <max-desktops-per-session>15</max-desktops-per-session> -->
		<!--     <max-requests-per-session>5</max-requests-per-session> -->
		<!--     <max-pushes-per-session>3</max-pushes-per-session> -->
	</session-config>
	<property>
		<property-name>locale</property-name>
		<property-value>en</property-value>
	</property>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/views/common/error/general.zul</location>
	</error-page>

	<error-page>
		<exception-type>seidor.xpressit.exception.BusinessException</exception-type>
		<location>/views/common/error/business.zul</location>
	</error-page>

	<language-config>
		<addon-uri>/WEB-INF/lang-addon.xml</addon-uri>
	</language-config>

	<system-config>
		<label-location>/WEB-INF/zk-label_en_EN.properties</label-location>
		<!--     <label-location>/WEB-INF/labels/invoice.properties</label-location> -->
	</system-config>
	
</zk>
